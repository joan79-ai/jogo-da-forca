#include <stdio.h>
#include <stdlib.h>
#include <string.h>
 
int main()
{
    char frase[60],rep[100],temporal[100];
    char pal;
    int longitude,i,j,inicial,acertado=0,temp=0,oportunidades=9;
    int repetido=0, ganho=0;
    printf("  **  JOGO DA FORCA  **\n\n");
    printf(" Digite a palavra a adivinhar: ");
    gets(frase);
    system("cls");
    longitude = 0;
    inicial = 0;
    j = 0;
    rep[0] = ' ';
    rep[1] = '\0';
    do
    {
        system("cls");
        temp=0;
        if(inicial == 0)
        {
            for(i=0;i<strlen(frase);i++)
            {
                if(frase[i] == ' ')
                {
                    temporal[i] = ' ';
                    longitude++;
                }
                else
                {
                    temporal[i] = '_';
                    longitude++;
                }
            }
        }
        inicial = 1;
        temporal[longitude] = '\0';
        for(i=0;i<strlen(rep);i++)
        {
            if(rep[i] == pal)
            {
                repetido = 1;
                break;
            }
            else
           {
               repetido = 0;
           }
        }
        if(repetido == 0)
        {
            for(i=0;i<strlen(frase);i++)
            {
                if(frase[i] == pal)
                {
                    temporal[i] = pal;
                    acertado++;
                    temp=1;
                }
            }
        }
        if(repetido == 0)
        {
            if(temp == 0)
            {
               oportunidades = oportunidades - 1;
            }
        }
        else
        {
            printf("este Carater já foi inserido");
            printf("\n\n");
        }
        printf("\n");
        for(i=0;i<strlen(temporal);i++)
        {
            printf(" %c ",temporal[i]);
        }
        printf("\n");
        if(strcmp(frase,temporal) == 0)
        {
            ganho = 1;
            break;
        }
        printf("\n  Letras Acertadas: %d",acertado);
        printf("\n  Oportunidades Restantes: %d",oportunidades);
        printf("\n");
        rep[j] = pal;
        j++;
        if (oportunidades==0)
        {
           break;
        }
        printf("  digite uma letra:");
        scanf("\n%c",&pal);
    }
    while(oportunidades != 0);
    if(gano)
    {
        printf("\n\n  parabéns, você ganhou ");
    }
    else
    {
        printf("\n\n  você perdeu ");
    }
    printf("\n\n");
    system("PAUSA");
    return 0;
}
